<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorError</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="DialogAnimation_Medium">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorBlueDark</item>
        <item name="android:textColorHint">@color/colorBlueDark</item>
        <item name="errorTextAppearance">@style/TextInputLayout_Error_appearance</item>
        <item name="hintTextAppearance">@style/TextInputLayout_Hint_appearance</item>
    </style>

    <style name="TextInputLayout_Hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlueDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputLayout_Error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
